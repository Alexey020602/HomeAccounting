@inherits  LayoutComponentBase

@* Required *@
<MudThemeProvider />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />

<div class="main-container">
    <button class="menu-toggle" @onclick="ToggleSidebar">
        @if (IsSidebarActive)
        {
            <i class="fas fa-times"></i>
        }
        else
        {
            <i class="fas fa-bars"></i>
        }
    </button>

    <div class="sidebar @(IsSidebarActive ? "active" : "collapsed")">
        <div class="app-header">
            <h3 class="app-title">Домашняя бухгалтерия</h3>
        </div>

        <nav class="nav-menu">
            <NavLink class="nav-link" href="check" Match="NavLinkMatch.All">
                Добавление чека
            </NavLink>
            <NavLink class="nav-link" href="checks">
                Чеки
            </NavLink>
            <NavLink class="nav-link" href="monthreport">
                Отчет
            </NavLink>
        </nav>
    </div>

    <div class="main-content @(IsSidebarActive ? "" : "expanded")">
        <div class="content-container">
            @Body
        </div>
    </div>
</div>

@code {
    private bool IsSidebarActive = true;

    private void ToggleSidebar()
    {
        IsSidebarActive = !IsSidebarActive;
    }
}