@inherits BudgetsSelectionView
@{
    base.BuildRenderTree(__builder);
}
@code {
    // private IMaybe<SelectedBudgetState>? Budget { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        await base.OnParametersSetAsync();
        BudgetNotSelected = _ => RedirectToBudgetsFragment;
    }

    private static RenderFragment RedirectToBudgetsFragment //=> @<RedirectComponent RedirectUrl="budgets" />
    {
        get
        {
            return builder =>
            {
                builder.OpenComponent<RedirectComponent>(0);
                builder.AddComponentParameter(1, nameof(RedirectComponent.RedirectUrl), "budgets");
                builder.CloseComponent();
            };
        }
    }
}