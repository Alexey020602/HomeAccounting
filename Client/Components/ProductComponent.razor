@using Core.Model.ChecksList
<div class="d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center">
        <i class="bi bi-circle-fill text-primary me-2" style="font-size: 0.5rem"></i>
        <span>@Product.Name</span>
    </div>

    <div class="d-flex align-items-center gap-3">
        <span class="text-muted small">
            @FormatQuantity(Product.Quantity)
        </span>
        <span class="fw-medium">
            @Product.Sum
        </span>
    </div>
</div>

@code {
    [Parameter] public Product Product { get; set; } = null!;

    private string FormatQuantity(double quantity)
    {
        return quantity % 1 == 0 ? quantity.ToString("N0") : quantity.ToString("N3");
    }

}