@using DateRange = Shared.Model.Dates.DateRange
<MudText Align="Align.Center" Typo="Typo.h2">
    Отчет за
    <MudText Inline="true" Color="Color.Primary"
             Typo="Typo.h2">@DateRange.Start?.ToString(StartFormat)</MudText>
    -
    <MudText Inline="true" Color="Color.Primary" Typo="Typo.h2">@DateRange.End?.ToString(EndFormat)</MudText>
</MudText>

@code {
    [Parameter] public DateRange DateRange { get; set; } = new();

    private string StartFormat
    {
        get
        {
            var format = "dd";

            if (DateRange.IsSameYear)
            {
                format += " MMMM yyyy";
            }
            else if(DateRange.IsSameMonth)
            {
                format += " MMMM";
            }
            
            return format;
        }

    }
    private const string EndFormat = "dd MMMM yyyy";
}